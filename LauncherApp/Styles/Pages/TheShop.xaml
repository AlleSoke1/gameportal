<UserControl x:Name="PageElement" x:Class="LauncherApp.Styles.Pages.TheShop"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:cControls = "clr-namespace:LauncherApp.Styles.Controls" 
             xmlns:awe="http://schemas.awesomium.com/winfx"
             mc:Ignorable="d" d:DesignWidth="545" BorderThickness="0" HorizontalContentAlignment="Right" VerticalContentAlignment="Bottom" Width="870" Height="505" >

    <!--<UserControl.Resources>
        <ResourceDictionary Source="/Styles/Style.xaml"/>
    </UserControl.Resources>-->

    <Grid x:Name="ElementGird"  Width="{Binding ActualWidth, ElementName=PageElement}" Height="{Binding ActualHeight, ElementName=PageElement}">
        
        <awe:WebControl x:Name="ShopWebUrl" LoadingFrameComplete="Url_LoadingFrameComplete" FlowDirection="LeftToRight" />

        <cControls:LoadingIcon x:Name="LoadedIcon" Margin="0,0,15,15" Height="30" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="30" Panel.ZIndex="20" Foreground="Black"  ></cControls:LoadingIcon>

    </Grid>

</UserControl>
