<UserControl x:Class="LauncherApp.Styles.Controls.GameListItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="45" d:DesignWidth="218" BorderThickness="0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" MouseEnter="UserControl_MouseEnter" MouseLeave="UserControl_MouseLeave" >
    <UserControl.Background>
        <SolidColorBrush Color="White" Opacity="0"/>
    </UserControl.Background>
    <Grid>

        <Image x:Name="GameIconImage" HorizontalAlignment="Left" Height="30" Margin="20,8,0,0" VerticalAlignment="Top" Width="30" Source="pack://application:,,,/LauncherResources;component/resources/images/avatar.png"/>
        <Label x:Name="GameNameLibl" Content="{Binding Path=GameName}" HorizontalAlignment="Left" Margin="60,14,0,0" VerticalAlignment="Top" Padding="0,0,0,-2" Width="158" Foreground="White"/>
        <Label x:Name="SelectedBar" HorizontalAlignment="Right" VerticalAlignment="Top" Width="3" Height="45" Foreground="{x:Null}" Background="#FFDA0029" Visibility="Hidden"/>

    </Grid>
</UserControl>
