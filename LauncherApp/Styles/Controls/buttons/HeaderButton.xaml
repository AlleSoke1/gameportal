<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             x:Name="ControlElement" x:Class="LauncherApp.Styles.Controls.HeaderButton" 
             Cursor="Hand"
             Width="40" Height="22" VerticalAlignment="Center" HorizontalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" MouseEnter="ControlElement_MouseEnter" MouseLeave="ControlElement_MouseLeave" Loaded="ControlElement_Loaded">
    <UserControl.Background>
        <SolidColorBrush Color="{Binding Path=BackgroundColor}" Opacity="0"/>
    </UserControl.Background>
    <Grid Width="{Binding ActualWidth, ElementName=ControlElement}"  Height="{Binding ActualHeight, ElementName=ControlElement}">

        <Button Style="{DynamicResource TransButtonStyle}" Click="Button_Click">
            <iconPacks:PackIconMaterial x:Name="ButtonIcon" Kind="{Binding Path=Icon}" Height="{Binding Path=FontSize}" Width="{Binding Path=FontSize}" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" />
        </Button>
        

    </Grid>
</UserControl>
