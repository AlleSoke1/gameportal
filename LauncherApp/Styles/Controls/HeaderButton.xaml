<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:fa="http://schemas.fontawesome.io/icons/" x:Name="ControlElement" x:Class="LauncherApp.Styles.Controls.HeaderButton" 
             Width="40" Height="22" VerticalAlignment="Center" HorizontalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" MouseEnter="ControlElement_MouseEnter" MouseLeave="ControlElement_MouseLeave">
    <UserControl.Background>
        <SolidColorBrush Color="{Binding Path=BackgroundColor}" Opacity="0"/>
    </UserControl.Background>
    <Grid Width="{Binding ActualWidth, ElementName=ControlElement}"  Height="{Binding ActualHeight, ElementName=ControlElement}">

        <Button Style="{DynamicResource TransButtonStyle}" Click="Button_Click">
            <fa:ImageAwesome x:Name="ButtonIcon" Icon="{Binding Path=Icon}" Height="14" Width="14" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>

        </Button>
        

    </Grid>
</UserControl>
