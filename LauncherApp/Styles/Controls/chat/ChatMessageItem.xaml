<UserControl x:Name="ItemElement" x:Class="LauncherApp.Styles.Controls.ChatMessageItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:fa="http://schemas.fontawesome.io/icons/"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             VerticalAlignment="Top"
             SizeChanged="MessagePanel_SizeChanged"
             mc:Ignorable="d" d:DesignWidth="425" BorderThickness="0"  MinHeight="25" MinWidth="425" Padding="0,5,0,10">
    <UserControl.Background>
        <SolidColorBrush Color="#FF373736" Opacity="0"/>
    </UserControl.Background>

    <Grid x:Name="ElementGird" >

        <StackPanel x:Name="MessagePanel"  ToolTip="{Binding SendDate}"  >

            <TextBlock x:Name="ownerName" Foreground="Silver" Text="" FontWeight="Bold" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,0,2,0" Height="18" FontSize="13"></TextBlock>

            <RichTextBox x:Name="messageText" IsReadOnly="True" Foreground="Silver" HorizontalAlignment="Left" VerticalAlignment="Top" Background="{x:Null}" BorderBrush="{x:Null}" BorderThickness="0"  Padding="0" SelectionBrush="#FFFF829A" Block.LineHeight="6" FontSize="13" Margin="10,0,0,0"/>


        </StackPanel>



    </Grid>
</UserControl>
